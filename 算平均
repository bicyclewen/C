#include<stdio.h>
int main(){
	int total=0;
	int counter=0;
	
	printf("%s", "Enter grade, -1 to end");
	int grade=0;
	scanf("%d", &grade);
	
	while(grade!=-1){
		total=total+grade;
		counter=counter+1;
		printf("%s", "Enter grade, -1 to end:");
		scanf("%d", &grade);
	}
	
	if(counter!=0){
		double average=(double)total/counter;
		printf("Class average is %.2f\n", average);
	}
	else{
		puts("No grades were entered");
	}
	   
}
